# OrbitSpace Production Environment Configuration
# Copy this file to .env and update with your production values

# Database
DATABASE_URL="your_production_postgresql_connection_string"

# GitHub OAuth App (Production)
GITHUB_CLIENT_ID="your_production_github_client_id"
GITHUB_CLIENT_SECRET="your_production_github_client_secret"
GITHUB_APP_ID="your_github_app_id"
GITHUB_APP_PRIVATE_KEY="your_github_app_private_key"

# NextAuth (Production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
NEXTAUTH_SECRET="your_128_character_hex_secret_generated_with_crypto_randomBytes_64_hex"
NEXTAUTH_URL="https://orbitspace.org"

# FastAPI Backend (Production)
FASTAPI_URL="https://api.orbitspace.org"
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
FASTAPI_SECRET_KEY="your_128_character_hex_secret_for_fastapi_jwt_and_session_management"
FASTAPI_CORS_ORIGINS="https://orbitspace.org,https://www.orbitspace.org,https://api.orbitspace.org"

# Redis (Upstash Production)
REDIS_URL="your_upstash_redis_url"
REDIS_TOKEN="your_upstash_redis_token"

# Internal API Secret (Production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
NEXTJS_API_SECRET="your_base64_encoded_32_byte_secret_for_internal_api_communication"

# Encryption (Production)
ENCRYPTION_KEY="your_64_character_hex_encryption_key_for_api_key_storage"

# Anthropic Claude API (Optional - Users can add their own)
ANTHROPIC_API_KEY="your_anthropic_api_key_optional"

# Production Configuration
NODE_ENV="production"
ENVIRONMENT="production"
HOST="0.0.0.0"
PORT="8000"

# Workspace Configuration
WORKSPACE_ROOT="/app/workspaces"
WORKSPACE_MAX_SIZE_GB=50

# Git Bot Configuration
GIT_BOT_NAME="OrbitSpace-bot"
GIT_BOT_EMAIL="bot@orbitspace.org"

# Security Configuration
ALLOWED_BASH_COMMANDS="ls,cat,grep,git,npm,python,node,pytest,jest,docker"
BASH_TIMEOUT_SECONDS=300
MAX_FILE_READ_SIZE_MB=10

# Agent Configuration
RESEARCH_AGENT_MODEL="claude-3-sonnet-20240229"
PLANNING_AGENT_MODEL="claude-3-sonnet-20240229"
IMPLEMENTATION_AGENT_MODEL="claude-3-haiku-20240307"
REVIEW_AGENT_MODEL="claude-3-sonnet-20240229"
MAX_CONCURRENT_AGENTS=10

# Monitoring and Logging
LOG_LEVEL="INFO"
ENABLE_METRICS="true"
SENTRY_DSN="your_sentry_dsn_for_error_tracking"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20